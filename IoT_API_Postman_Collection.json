				{
					"name": "Gửi Dữ Liệu Cảm Biến (POST)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "x-api-token",
								"value": "{{api_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"deviceId\": \"esp32\",\n  \"data\": {\n    \"temp\": 25.5,\n    \"humi\": 60.2,\n    \"light\": 450\n  },\n  \"timestamp\": \"2024-01-15T10:30:00Z\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/telemetry",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"telemetry"
							]
						},
						"description": "Gửi dữ liệu cảm biến từ ESP32 lên server"
					},
					"response": []
				},
				{
					"name": "Lấy Dữ Liệu Cảm Biến (GET)",
